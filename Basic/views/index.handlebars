<div class="containerFront">
   <div class="frontTitle top">Welcome to</div>
   <div class="frontTitle">Insightful Inspection</div>
   <div class="frontBtn">
      <button id="login" href="#loginModal" class=" login100-form-btn btn1">Login</button>
      <button id="register" href="#myRegModal" class="login100-form-btn btn1">Register</button>
   </div>
</div>
<!-- Html for the front page modals -->
<div id="loginModal" class="popupContainer" style="display:none;">
   <div class="modal-content">
      <form class="login100-form validate-form" name="loginForm">
         <span class="login100-form-logo">
            <i class="zdmi zmdi-landscape"><img src="../../assets/images/logo.png" width="130" height="100" alt="Logo"></i>
         </span>
         <span class="login100-form-title ">Log in</span>
         <div class="wrap-input100 validate-input" data-validate="Enter username">
            <input type="text" class="input100 username"  name="username" placeholder="Username">
            <span class="focus-input100"></span>
         </div>
         <div class="wrap-input100 validate-input" data-validate="Enter Password">
            <input required type="password" class="input100 password"  name="pass" placeholder="Password">
            <span class="focus-input100"></span>
         </div>
         <div class="container-login100-form-btn">
            <a id="loginBtn" class="login100-form-btn close" onclick="validateLogin();" href="/home">Login</a>
         </div>
         <div class="text-center p-t-90">
            <a class="txt1" href="#">Forgot Password?</a>
         </div>
      </form>
   </div>
</div>
<div id="myRegModal" class="popupContainerReg" style="display:none;">
   <div class="modal-content">
      <form class="login100-form validate-form">
         <span class="login100-form-logo">
            <i class="zdmi zmdi-landscape"><img src="../../assets/images/logo.png" width="130" height="100" alt="Logo"></i>
         </span>
         <span class="login100-form-title ">Register</span>
         <div class="firstnLast">
            <div class="wrap-input100 FL validate-input" data-validate="Enter First Name">
               <input required type="text" class="input100" id="firstName" name="firstname" placeholder="First Name">
               <span class="focus-input100"></span>
            </div>
            <div class="wrap-input100 FL ln validate-input" data-validate="Enter Last Name">
               <input required type="text" class="input100" id="lastName" name="lastname" placeholder="Last Name">
               <span class="focus-input100" ></span>
            </div>
         </div>
         <div class="firstnLast">
            <div class="wrap-input100 FL validate-input" data-validate="Enter username">
               <input required type="text" class="input100" id="userNameReg" name="username" placeholder="Username">
               <span class="focus-input100" ></span>
            </div>
            <div class="wrap-input100 FL ln validate-input" data-validate="Enter password">
               <input required type="password" class="input100" id="passWordReg" name="password" placeholder="Password">
               <span class="focus-input100" ></span>
            </div>
         </div>
         <div class="wrap-input100 validate-input" data-validate="Enter Company Name">
            <input required type="text" class="input100" id="companyName" name="username" placeholder="Company Name">
            <span class="focus-input100" ></span>
         </div>
         <div class="firstnLast">
            <div class="wrap-input100 FL validate-input" data-validate="Enter Email">
               <input required type="email" class="input100" id="email" name="email" placeholder="Email">
               <span class="focus-input100" ></span>
            </div>
            <div class="wrap-input100 FL ln validate-input" data-validate="Enter Phone Number">
               <input required type="phone" class="input100" id="phoneNum" name="phoneNumber" placeholder="Phone Number">
               <span class="focus-input100" ></span>
            </div>
         </div>
         <div class="container-login100-form-btn">
            <a id="regBtn" class="login100-form-btn close" href="/admin">Register</a>
         </div>
      </form>
   </div>
</div>